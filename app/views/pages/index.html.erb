<h1>Alexa</h1>

<div class="bs-callout bs-callout-info alexa-response hide" id="callout-alerts-no-default">

  <div class="chatbox">
    <p id="user-response"></p>
    <span class="time-right">User:<%= DateTime.now.strftime("%H:%M")%></span>
  </div>

  <div class="chatbox darker">
    <p id="alexa-response"> </p>
    <span class="time-right">Alexa: <%= DateTime.now.strftime("%H:%M")%></span>
  </div>
</div>

<div class="row home-row">
  <div class="col-lg-12">
    <div class="input-group">
      <input id="query" type="text" class="form-control" placeholder="Say something to Alexa...">
      <span class="input-group-btn">
        <button id="al-ataquerl" class="btn btn-default" type="button">Send</button>
      </span>
    </div>
  </div>
</div>
